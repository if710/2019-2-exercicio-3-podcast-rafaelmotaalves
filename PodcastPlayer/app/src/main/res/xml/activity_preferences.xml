<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="feed_url"
        app:title="Url for the podcast feed"
        />

    <DropDownPreference
        app:key="update_time"
        app:useSimpleSummaryProvider="true"
        app:title="Time between podcast feed updates"
        app:entries="@array/time_intervals"
        app:entryValues="@array/time_intervals_values"
    />

</androidx.preference.PreferenceScreen>